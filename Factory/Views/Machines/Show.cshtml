@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>  
    @using (Html.BeginForm("Delete", "Machines", new { id = Model.MachineId }, FormMethod.Post))
    {
        <input type="submit" value="Delete"  />
    }
<div class="container">
@if(@Model.JoinEntities.Count == 0)
{
  <p>This machine cannot be repaired by any engineers yet.</p>
}
else
{
  <h4>This machine can be repaired by the following engineers:</h4>
  <ul>
    @foreach(EngineerMachine join in Model.JoinEntities)
    {
      <li>@join.Engineer.Name</li>
      @using (Html.BeginForm("DeleteJoin", "Machines"))
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="Delete"/>
      }
    }
  </ul>
}
<p>@Html.ActionLink("Add an engineer", "AddEngineer", "Machines", new { id = Model.MachineId })</p>
</div>

  <p>@Html.ActionLink("Home", "Index", "Home")</p>
